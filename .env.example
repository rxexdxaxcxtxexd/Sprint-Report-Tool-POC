# ============================================================================
# Sprint Report Service - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual credentials
# DO NOT commit .env to version control - it contains sensitive credentials

# ----------------------------------------------------------------------------
# Anthropic Claude API
# ----------------------------------------------------------------------------
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# ----------------------------------------------------------------------------
# JIRA Configuration
# ----------------------------------------------------------------------------
# Your JIRA instance base URL (without trailing slash)
JIRA_BASE_URL=https://your-domain.atlassian.net

# Your JIRA account email
JIRA_EMAIL=your-email@example.com

# JIRA API token (create at: https://id.atlassian.com/manage-profile/security/api-tokens)
JIRA_API_TOKEN=your-jira-api-token-here

# Default JIRA board ID (optional, can be overridden in API calls)
JIRA_DEFAULT_BOARD_ID=38

# ----------------------------------------------------------------------------
# Fathom Video API
# ----------------------------------------------------------------------------
# Get your API key from: https://fathom.video/settings/api
FATHOM_API_KEY=your-fathom-api-key-here

# ----------------------------------------------------------------------------
# N8N Webhook Configuration
# ----------------------------------------------------------------------------
# N8N webhook URL for approval/rejection notifications
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/sprint-report-approval

# ----------------------------------------------------------------------------
# Service Configuration
# ----------------------------------------------------------------------------
# Port for FastAPI service
SERVICE_PORT=8001

# Service host (use 127.0.0.1 for local only, 0.0.0.0 for network access)
SERVICE_HOST=127.0.0.1

# Environment (development, staging, production)
ENVIRONMENT=development

# ----------------------------------------------------------------------------
# Email Configuration (Optional)
# ----------------------------------------------------------------------------
# SMTP settings for email delivery
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM_NAME=Sprint Report Service
SMTP_FROM_EMAIL=noreply@example.com

# ----------------------------------------------------------------------------
# Report Generation Settings
# ----------------------------------------------------------------------------
# Path to sprint report guide template (optional)
SPRINT_GUIDE_PATH=guides/sprint_report_guide.md

# Company name for report branding
COMPANY_NAME=Cornerstone Solutions Group

# Default timezone for date/time formatting
TIMEZONE=America/New_York

# ----------------------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------------------
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path (optional, logs to console if not set)
LOG_FILE=logs/sprint-report-service.log

# ----------------------------------------------------------------------------
# Advanced Settings
# ----------------------------------------------------------------------------
# Claude API model to use
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Maximum tokens for Claude API responses
CLAUDE_MAX_TOKENS=4096

# Temperature for Claude API (0.0 - 1.0, lower = more focused)
CLAUDE_TEMPERATURE=0.7

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Maximum retries for API calls
MAX_RETRIES=3

# Enable debug mode (more verbose logging)
DEBUG=false
